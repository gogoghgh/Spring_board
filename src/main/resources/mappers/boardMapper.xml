<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.BoardMapper">
	
	<!-- 1. 글쓰기 =============================================== -->
	<insert id="create">
		insert into tbl_board (title, writer, content)
		values (#{title}, #{writer}, #{content})
	</insert>
	
	<!-- 2. 전체 글 목록 조회 ===================================== -->
	<select id="listAll" resultType="BoardVO" resultMap="vo">
		select *
		from tbl_board
		where bno &gt; 0
		order by bno desc
	</select>
	
	<!-- log4j.. content에 unread 뜨던 거 해결 ==================== -->
	<resultMap type="BoardVO" id="vo">
		<result property="content" column="content" />
	</resultMap>
	
	
	<!-- 2-1. 페이징 처리한 글 목록 조회 ===================================== -->
	<select id="listPage" resultType="BoardVO" resultMap="vo">
		select *
		from tbl_board
		order by bno desc, regdate desc
		limit #{page}, 10
	</select>
	
	<select id="listPage2" resultType="BoardVO" resultMap="vo">
		select *
		from tbl_board
		order by bno desc, regdate desc
		limit #{page}, #{pageSize}
	</select>
	
	
	
	
	<!-- 3. 글 1개 정보 가져오기 ====================================-->
	<select id="read" resultType="BoardVO">
		select *
		from tbl_board
		where bno = #{bno}
	</select>
	
	
	<!-- 3-1. 글 조회수 1 증가 =========================================== -->
	<update id="updateReadCnt">
		update tbl_board
		set viewcnt = viewcnt + 1
		where bno = #{bno}
	</update>
	
	
	<!-- 4-1. 글 수정 ====================================== -->
	<update id="updateBoard">
		update tbl_board
		set title = #{title}, writer = #{writer}, content = #{content}
		where bno = #{bno}
	</update>
	
	
	<!-- 5. 글 삭제 ========================================= -->
	<delete id="removeBoard">
		delete from tbl_board
		where bno = #{bno}	
	</delete>
	
	
	
</mapper>